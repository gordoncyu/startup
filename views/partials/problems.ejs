<main class="border-b border-gray-700">
    <div class="flex flex-col p-8">
        <section class="grid grid-cols-2 gap-4">
            <div class="col-span-2">
                <h2 class="text-2xl font-bold mb-4">Questions</h2>
                <div class="content-box bg-[#1e1e1e] p-4 rounded-md">
                    <div class="flex justify-between mb-4">
                        <div class="font-bold text-xl">Title</div>
                        <div class="font-bold text-xl">Difficulty</div>
                    </div>
                    <% for(let problem of problems) { %>
                        <div class="flex justify-between m-4">
                            <form hx-get="/comp/problems/<%= encodeURIComponent(problem.name) %>" hx-target="main" hx-swap="outerHTML">
                                <input type="submit" value="<%= problem.name %>" class="text-blue-500" />
                            </form>
                            <div class="inline-block px-3 py-1 text-xs font-semibold text-gray-700 bg-gray-200 rounded-full">
                                <%= problem.difficulty %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </section>
    </div>
</main>
